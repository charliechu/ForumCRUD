<h1>後台管理文章區</h1>
<p>
    <%= link_to("後台管理討論區", admin_boards_path) %> |
    <%= link_to("最新更新", admin_posts_path(:recent => 1))%> ｜
    <%= link_to("過期文章", admin_posts_path(:recent => 0))%> ｜
    <%= link_to("前台首頁", boards_path)%>
</p>

<ul>
    <% @posts.each do |post| %>
    <li>
        <b>
            <%= link_to(post.subject, admin_post_path(post)) %>
            By <%= post.user.email if post.user.present? %>
        </b>
        <p>
            <%= link_to("編輯", edit_admin_post_path(post)) %> |
            <%= link_to("刪除", admin_post_path(post), :method => :delete) %>
        </p>
    </li>
	<% end %>
</ul>

<%= will_paginate(@posts) %>